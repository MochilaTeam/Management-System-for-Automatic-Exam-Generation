{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "app",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": ["node"],
        "typeRoots": ["./app/types", "./app/shared/types", "./node_modules/@types"],
        "lib": ["ES2020"],
        "moduleResolution": "node"
    },
    "include": ["app"]

}
